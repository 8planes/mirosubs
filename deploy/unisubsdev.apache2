<VirtualHost *:8080>
    ServerAdmin aduston@gmail.com

    ServerName  dev.universalsubtitles.org
    ServerAlias dev.universalsubtitles.org
    ServerAlias wdev.universalsubtitles.org

    LogLevel warn
    ErrorLog /var/www/universalsubtitles.dev/log/apache.error.log
    CustomLog /var/www/universalsubtitles.dev/log/apache.custom.log combined

    WSGIDaemonProcess unisubsdev user=www-data group=pcf-web threads=2
    WSGIProcessGroup unisubsdev

    WSGIScriptAlias / /var/www/universalsubtitles.dev/mirosubs/deploy/unisubsdev.wsgi

    Alias /site_media /var/www/universalsubtitles.dev/mirosubs/media/
    <Location "/site_media">
        SetHandler None
        Order allow,deny
        Allow from all
    </Location>

    Alias /media /var/www/universalsubtitles.dev/env/lib/python2.6/site-packages/django/contrib/admin/media/
    <Location "/media">
        SetHandler None
        Order allow,deny
        Allow from all
    </Location>
</VirtualHost>
